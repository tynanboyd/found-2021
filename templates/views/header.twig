{% if not options.hide_cgas_network %}
  {% include 'partials/cgas-network.twig' with {'class' : 'desktop'} %}
{% endif %}

<header class="site-header">
  <div class="container-fluid">
    <div class="row align-items-center justify-content-lg-between">

      <div class="col-4 col-lg-3 col-xl-auto">
        <div class="site-header__logos">
          <a class="site-header__logo" href="{{ site.link }}">
            {% include 'public/images/found-logo.svg' %}
          </a>
          <span class="color--white">BY</span>
          <span class="site-header__logo--cgas">
            {% include 'public/images/cgas-logo-white.svg' %}
          </span>
        </div>

      </div>

      <div class="col-4 col-lg-auto">
        <div class="site-header__center">
          {% if options.festival_dates %}
            <span class="site-header__festival-dates">{{ options.festival_dates }}</span>
          {% endif %}
        </div>
      </div>

      <div class="col-4 col-lg-auto d-flex ml-auto">
        <button class="hamburger hamburger--spring d-lg-none js-mobile-nav-trigger ml-auto" type="button" aria-label="Menu" aria-controls="navigation" aria-expanded="true/false">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
        {% include 'partials/navigation-main.twig' %}
      </div>

    </div>
  </div>
</header>

<div class="mobile-nav-overlay js-mobile-nav-overlay d-none"></div>

{% include 'partials/navigation-mobile.twig' %}

